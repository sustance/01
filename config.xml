<?xml version="1.0" encoding="UTF-8"?>
<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.lingyi"
        versionCode="10" 
        version   = "1.0.0">
      <name>Lingyi</name>
    <description>Lingyi rough notes etc for BB5</description>
    <author href="http://phonegap.com" email="mai.ming.dao@gmail.com">Mai Ming Dao</author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="permissions"                value="none"/>

    <preference name="phonegap-version"           value="2.5.0" /> 
    <preference name="orientation"                value="default" />
    <preference name="target-device"              value="universal" />
    <preference name="fullscreen"                 value="true" />
    <preference name="disable-cursor"             value="false" /> 

    <icon src="icon.png" />
    <icon src="activation68.png"   gap:platform="blackberry" />
    <icon src="activation68.png"   gap:platform="blackberry" gap:state="hover" />

    <access origin="http://127.0.0.1*"/>
</widget>
